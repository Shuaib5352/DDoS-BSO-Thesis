# Master Thesis Project Configuration
# DDoS Detection with BSO-Hybrid ML Framework
# Author: SHUAIB AYAD JASIM
# Date: February 2026

[project]
name = "DDoS Detection with BSO-Hybrid ML Framework"
title = "Improved Detection of DDoS Attacks Using a Hybrid Machine Learning Framework Optimized with Bat Swarm Optimization (BSO) in Dynamic Network Environments"
author = "SHUAIB AYAD JASIM"
institution = "Karatay University, Konya, Turkey"
degree = "Master of Science"
field = "Computer Science"
year = 2026

[dataset]
name = "CICIoT2023"
source = "Canadian Institute for Cybersecurity"
year = 2023
total_samples = 118466
train_samples = 87500
validation_samples = 10322
test_samples = 20644
total_features = 39
selected_features = 19
feature_reduction_pct = 51.3
classes = 5
class_labels = ["Backdoor_Malware", "BenignTraffic", "DDoS-ACK_Fragmentation", "DDoS-SYN_Flood", "Recon-PortScan"]
preprocessing = ["SMOTE", "StandardScaler", "StratifiedSplit"]

[algorithm]
name = "BSO-Hybrid"
type = "Meta-heuristic Optimization"
base_classifier = "Random Forest"
optimization_target = "joint_feature_selection_and_hyperparameters"
reference = "Yang, X.-S. (2010). A New Metaheuristic Bat-Inspired Algorithm"

[bso_parameters]
population_size = 25
max_iterations = 50
frequency_min = 0.0
frequency_max = 2.0
initial_loudness = 0.95
initial_pulse_rate = 0.5
loudness_decay = 0.9
pulse_rate_increase = 0.01
cv_folds = 3
cv_subsample = 12000

[rf_hyperparameters]
n_estimators = 300
max_depth = 25
min_samples_split = 5
min_samples_leaf = 2
max_features = "sqrt"

[results]
best_accuracy = 89.82
best_f1_macro = 84.24
best_f1_weighted = 89.90
features_used = 19
dimension_reduction_pct = 51.3
dimensionality_reduction_status = "Significant"
training_time_seconds = 1332.6
statistical_significance = true

[comparison_algorithms]
algorithms = ["XGBoost", "Standard RF", "PSO-RF", "GA-RF", "GWO-RF"]
metrics = ["Accuracy", "F1-Score", "AUC-ROC", "Training Time", "Features Used"]

[validation]
test_approach = "stratified_10fold"
significance_test = "paired_t_test"
p_value_threshold = 0.05

[dependencies]
python = ">= 3.10"
numpy = ">= 1.24.0"
pandas = ">= 2.0.0"
scikit_learn = ">= 1.3.0"
matplotlib = ">= 3.7.0"
seaborn = ">= 0.12.0"
scipy = ">= 1.11.0"
joblib = ">= 1.3.0"
imbalanced_learn = ">= 0.11.0"
xgboost = ">= 2.0.0"

[frontend]
framework = "Next.js 14"
runtime = "React 19"
ui_library = "Radix UI + TailwindCSS"
visualization = ["Recharts", "Matplotlib", "Plotly"]
port = 3000
language = "TypeScript"

[directories]
project_root = "."
app = "./app"
components = "./components"
lib = "./lib"
scripts = "./scripts"
public = "./public"
docs = "./docs"
results = "./results"
figures = "./results/figures"

[outputs]
experiment_results = "public/experiment_results.json"
bso_convergence = "results/bso_convergence.json"
model_comparison = "results/model_comparison.json"
performance_metrics = "results/performance_metrics.json"
log_file = "results/experiment.log"

[documentation]
readme = "README.md"
thesis_doc_ar = "docs/thesis-documentation.md"
thesis_doc_tr = "docs/thesis-documentation-turkish.md"
implementation_guide = "docs/IMPLEMENTATION_GUIDE.md"
api_reference = "docs/API_REFERENCE.md"
